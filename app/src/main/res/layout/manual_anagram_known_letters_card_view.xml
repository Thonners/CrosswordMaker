<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/manual_anagram_known_letter_padding"
    android:layout_margin="@dimen/manual_anagram_known_letter_margin">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <View
            android:id="@+id/known_letter_underline"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/black"
            android:layout_alignParentBottom="true"
            />
        <TextView
            android:id="@+id/known_letter_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/known_letter_underline"
            android:textSize="@dimen/manual_anagram_known_letter_size" />
    </RelativeLayout>
</android.support.v7.widget.CardView>