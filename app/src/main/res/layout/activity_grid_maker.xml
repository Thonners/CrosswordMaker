<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android.support.design="http://schemas.android.com/apk/res-auto"
    android:id="@+id/grid_maker_relative_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.thonners.crosswordmaker.GridMaker">

    <LinearLayout
        android:id="@+id/grid_maker_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <GridLayout
            android:id="@+id/main_grid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:columnCount="1"
            android:rowCount="1"
            android:padding="@dimen/grid_padding"
            android:background="@color/black">

        </GridLayout>

        <LinearLayout
            android:id="@+id/image_view_wrapper"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">
            <TextView
                android:id="@+id/grid_image_view_text_prompt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Position the dots over the corners of the grid"
                android:textSize="24dp"
                android:textAlignment="center"/>
            <com.thonners.crosswordmaker.GridMakerImageView
                android:id="@+id/grid_image_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerInside"/>
            <!--<ImageView-->
                <!--android:id="@+id/grid_image_view"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="match_parent"-->
                <!--android:scaleType="centerInside"/>-->
        </LinearLayout>

    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_add"
        android:tint="@color/black"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="20dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android.support.design:fabSize="normal"
        android:onClick="fabClicked"
        android:elevation="@dimen/fab_elevation"
        android.support.design:borderWidth="0dp" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_camera_alt_white_18dp"
        android:tint="@color/black"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="20dp"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@id/fab"
        android.support.design:fabSize="normal"
        android:onClick="fabClicked"
        android:elevation="@dimen/fab_elevation"
        android.support.design:borderWidth="0dp" />
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_rotationally_symmetric"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_refresh_white_48dp"
        android:tint="@color/black"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="20dp"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@id/fab_photo"
        android.support.design:fabSize="normal"
        android:onClick="fabClicked"
        android:elevation="@dimen/fab_elevation"
        android.support.design:borderWidth="0dp" />
</RelativeLayout>