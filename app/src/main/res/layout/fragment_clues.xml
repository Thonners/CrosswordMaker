<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/clue_image_padding">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/take_picture_clues_button"
        android:layout_gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="4dp"
        android:layout_marginTop="@dimen/home_card_margin"
        android:layout_marginLeft="@dimen/home_card_margin"
        android:layout_marginRight="@dimen/home_card_margin">
        <TextView
            android:id="@+id/take_picture_clues_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textStyle="normal"
            android:textColor="@color/text_default"
            android:textSize="@dimen/home_card_text_size_main"
            android:text="@string/take_clue_picture_prompt"
            android:padding="@dimen/home_card_padding"
            android:layout_margin="@dimen/home_card_margin"
            android:layout_alignParentTop="true"/>
    </android.support.v7.widget.CardView>

    <com.thonners.crosswordmaker.TouchImageView
        android:id="@+id/image_view_clues"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentTop="true" />

    <!-- ++++++++++++ Old standard image view ++++++++++++++
    <ImageView
        android:id="@+id/image_view_clues"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentTop="true"/> -->


</LinearLayout>